#!/usr/bin/make -f
export DH_VERBOSE=1
export PYBUILD_NAME=koda-bin
export PYBUILD_DISABLE=test

%:
	dh ${@} --with=python3 --buildsystem=pybuild

override_dh_auto_build:
	cp -r addons/* koda/addons/
	dh_auto_build

override_dh_auto_install:
	dh_auto_install
	rm debian/koda/usr/lib/python3*/dist-packages/koda/addons/point_of_sale/static/src/fonts/Inconsolata.otf
	for LINKTARGET in `awk '{ print $2 }' koda.links`; do rm debian/koda/${LINKTARGET} ; done
	find debian/koda -name LICENSE.txt -exec rm {} \;

override_dh_auto_clean:
	dh_auto_clean
	for d in addons/* ; do rm -fr koda/$$d ; done
